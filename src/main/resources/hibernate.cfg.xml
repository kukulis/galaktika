        <mapping class="lt.gt.sgalaktika.construction.ShipGroupBuildSpecification"/>
        <mapping class="lt.gt.sgalaktika.construction.FleetBuildSpecification"/>
        
        <!-- <mapping class="lt.gt.sgalaktika.Fleet"/> --> 

