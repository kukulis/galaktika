        <!-- <mapping resource="lt/gt/sgalaktika/battle/BattleReportRound.hbm.xml"></mapping> -->
        
        <mapping class="lt.gt.sgalaktika.battle.BattleReport"/>
        <mapping class="lt.gt.sgalaktika.battle.BattleReportRound"/>
