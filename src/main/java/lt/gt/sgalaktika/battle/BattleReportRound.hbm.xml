<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="lt.gt.sgalaktika.battle">
	<class name="BattleReportRound" table="battlereportround">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        
        <property name="roundNumber" />
        
        <set name="shots" >
		    <key column="round_id"/>
		    <one-to-many class="BattleReportShot"/>
		</set>
    </class>
    
    <class name="BattleReportShot" table="battlereportshot">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="attackerShip" length="32" ></property>
        <property name="defenderShip" length="32" ></property>
        <property name="destroyed" ></property>
    </class>
    
</hibernate-mapping>